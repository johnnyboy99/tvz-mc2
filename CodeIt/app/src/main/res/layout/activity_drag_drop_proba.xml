<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dragDropLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tvz.mc2.codeit.DragDropProba">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/slika"
            android:layout_width="100dp"
            android:tag="gumb1"
            android:layout_height="100dp"
            android:src="@drawable/btn_proba" />

        <Space
            android:layout_width="40dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/slika2"
            android:layout_width="100dp"
            android:tag="gumb2"
            android:layout_height="100dp"
            android:src="@drawable/btn_proba" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <TextView
        android:id="@+id/tekst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LALALALALALALALALALALAALALLLA" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/rectangle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:tag="rectangle1"
            android:background="@drawable/rectangle" />

        <Button
            android:id="@+id/buttonProba"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="New Button"
            android:visibility="gone" />

        <Space
            android:layout_width="40dp"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/rectangle2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:tag="rectangle2"
            android:background="@drawable/rectangle" />

        <Button
            android:id="@+id/buttonProba2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="New Button"
            android:visibility="gone" />

    </LinearLayout>



</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".GlavniIzbornik"
    android:orientation="vertical"
    android:weightSum="5">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="zastave"
        android:id="@+id/btnZastave"
        android:layout_gravity="right"
        android:layout_marginBottom="50dp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Kreni"
        android:id="@+id/btnKreni"
        android:layout_gravity="center"
        android:layout_weight="1"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Postavke"
        android:id="@+id/btnPostavke"
        android:layout_gravity="center"
        android:layout_weight="1"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Pomoć"
        android:id="@+id/btnPomoć"
        android:layout_gravity="center"
        android:layout_weight="1"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Nauči više"
        android:id="@+id/btnNauciVise"
        android:layout_gravity="center"
        android:layout_weight="1"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Proba"
        android:id="@+id/btnProba"
        android:layout_gravity="center"
        android:layout_weight="1"/>

</LinearLayout>

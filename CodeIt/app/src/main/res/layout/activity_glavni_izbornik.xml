<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".GlavniIzbornik"
    android:orientation="vertical"
    android:weightSum="6">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zastava"
        android:src="@drawable/eng"
        android:padding="0dp"
        android:layout_weight="0.3"
        android:layout_gravity="right"
        android:onClick="klikNaZastavu"/>

    <Space
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:layout_weight="0.7"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Kreni"
        android:id="@+id/btnKreni"
        android:layout_gravity="center"
        android:layout_weight="1"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Postavke"
        android:id="@+id/btnPostavke"
        android:layout_gravity="center"
        android:layout_weight="1"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Pomoć"
        android:id="@+id/btnPomoć"
        android:layout_gravity="center"
        android:layout_weight="1"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Nauči više"
        android:id="@+id/btnNauciVise"
        android:layout_gravity="center"
        android:layout_weight="1"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Proba"
        android:id="@+id/btnProba"
        android:onClick="klikNaProbu"
        android:layout_gravity="center"
        android:layout_weight="1"/>

</LinearLayout>

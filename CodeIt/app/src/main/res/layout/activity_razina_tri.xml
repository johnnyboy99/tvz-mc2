<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayoutRazinaTri"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frameLayoutRazinaTri">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="tvz.mc2.codeit.RazinaTri">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/crvenaPozadina"
                android:id="@+id/menuRazinaTri"
                android:weightSum="10">

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/menu36"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/border"
                    android:layout_weight="2"
                    android:id="@+id/drawerGumbRazinaTri"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:id="@+id/menuElementiRazinaTri">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <HorizontalScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fadingEdgeLength="20dp"
                            android:id="@+id/horizontalScrollViewRazinaTri">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="90dp"
                                android:padding="20dp"
                                android:orientation="horizontal">


                                <ImageView
                                    android:id="@+id/slikaCheckBox1RazinaTri"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/gumb1"
                                    android:layout_marginRight="10dp"
                                    android:tag="slikaCheckBox1Razina3"/>

                                <ImageView
                                    android:id="@+id/slikaCheckBox2RazinaTri"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/gumb1"
                                    android:tag="slikaCheckBox2Razina3"/>

                            </LinearLayout>

                        </HorizontalScrollView>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/arrowLRazinaTri"
                        android:src="@drawable/arrowl"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/arrowRRazinaTri"
                        android:src="@drawable/arrowr"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/menuRazinaTri">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@color/sivaPozadina">

                    <GridLayout
                        android:id="@+id/radnaPlohaRazinaTri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:columnCount="2"
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_row="0"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="20dp"
                            android:layout_marginRight="20dp">

                            <View
                                android:id="@+id/okvirCheckBox1RazinaTri"
                                android:layout_width="90dp"
                                android:layout_height="30dp"
                                android:background="@drawable/okvir"
                                android:tag="okvirCheckBox1Razina3"
                                android:visibility="visible"/>

                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/checkBox1RazinaTri"
                                android:text="Prikaži labelu"
                                android:checked="false"
                                android:layout_gravity="center_horizontal"
                                android:visibility="gone"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_row="0"
                            android:layout_gravity="center_horizontal">

                            <View
                                android:id="@+id/okvirCheckBox2RazinaTri"
                                android:layout_width="90dp"
                                android:layout_height="30dp"
                                android:background="@drawable/okvir"
                                android:tag="okvirCheckBox2Razina3"
                                android:visibility="visible"/>

                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/checkBox2RazinaTri"
                                android:text="Prikaži spinner"
                                android:checked="false"
                                android:visibility="gone"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_row="1"
                            android:layout_gravity="center_horizontal|center_vertical">

                            <View
                                android:id="@+id/okvirSpinnerRazinaTri"
                                android:layout_width="90dp"
                                android:layout_height="30dp"
                                android:background="@drawable/okvir"
                                android:tag="okvirLabelaRazinaTri"
                                android:visibility="gone"/>

                            <Spinner
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/spinnerRazinaTri"
                                android:layout_column="1"
                                android:layout_row="1"
                                android:visibility="invisible">

                            </Spinner>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_row="1"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginRight="20dp">

                            <View
                                android:id="@+id/okvirLabelaRazinaTri"
                                android:layout_width="90dp"
                                android:layout_height="30dp"
                                android:background="@drawable/okvir"
                                android:tag="okvirLabelaRazinaTri"
                                android:visibility="gone"/>

                            <TextView
                                android:id="@+id/labelaRazinaTri"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CodeIt"
                                android:textSize="40dp"
                                android:visibility="invisible"
                                android:textColor="#000000"/>

                        </LinearLayout>


                    </GridLayout>

                </LinearLayout>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gumb_go_razina3"
                    android:src="@drawable/strelica2"
                    android:background="@drawable/sve_skupa"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:padding="13dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="25dp"
                    android:visibility="invisible"/>

            </RelativeLayout>

        </LinearLayout>

    </FrameLayout>

    <ListView
        android:id="@+id/drawerListRazinaTri"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/crvenaPozadina"
        android:divider="@null"
        />

</android.support.v4.widget.DrawerLayout>

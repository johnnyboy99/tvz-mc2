<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayoutRazinaTri"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frameLayoutRazinaTri"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="tvz.mc2.codeit.RazinaTri">

            <LinearLayout
                android:id="@+id/menuRazinaTri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/crvenaPozadina"
                android:orientation="horizontal"
                android:weightSum="10">

                <ImageButton
                    android:id="@+id/drawerGumbRazinaTri"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:background="@color/crvenaPozadina"
                    android:src="@drawable/menu36" />

                <RelativeLayout
                    android:id="@+id/menuElementiRazinaTri"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <HorizontalScrollView
                            android:id="@+id/horizontalScrollViewRazinaTri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fadingEdgeLength="20dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="90dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/slikaCheckBox1RazinaTri"
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:layout_marginRight="10dp"
                                    android:src="@drawable/gumb_checkbox"
                                    android:tag="slikaCheckBox1Razina3" />

                                <ImageView
                                    android:id="@+id/slikaCheckBox2RazinaTri"
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:src="@drawable/gumb_checkbox"
                                    android:tag="slikaCheckBox2Razina3" />

                            </LinearLayout>
                        </HorizontalScrollView>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/arrowLRazinaTri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrowl" />

                    <ImageView
                        android:id="@+id/arrowRRazinaTri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrowr" />

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/menuRazinaTri">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/radnaPloha"
                    android:gravity="center">

                    <GridLayout
                        android:id="@+id/radnaPlohaRazinaTri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:columnCount="2"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_row="0">

                            <View
                                android:id="@+id/okvirCheckBox1RazinaTri"
                                android:layout_width="90dp"
                                android:layout_height="30dp"
                                android:background="@drawable/okvir"
                                android:tag="okvirCheckBox1Razina3"
                                android:visibility="visible" />

                            <CheckBox
                                android:id="@+id/checkBox1RazinaTri"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:checked="false"
                                android:text="Prikaži labelu"
                                android:visibility="gone" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_gravity="center_horizontal"
                            android:layout_row="0">

                            <View
                                android:id="@+id/okvirCheckBox2RazinaTri"
                                android:layout_width="90dp"
                                android:layout_height="30dp"
                                android:background="@drawable/okvir"
                                android:tag="okvirCheckBox2Razina3"
                                android:visibility="visible" />

                            <CheckBox
                                android:id="@+id/checkBox2RazinaTri"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="false"
                                android:text="Prikaži spinner"
                                android:visibility="gone" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_row="1">

                            <View
                                android:id="@+id/okvirSpinnerRazinaTri"
                                android:layout_width="90dp"
                                android:layout_height="30dp"
                                android:background="@drawable/okvir"
                                android:tag="okvirLabelaRazinaTri"
                                android:visibility="gone" />

                            <Spinner
                                android:id="@+id/spinnerRazinaTri"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_row="1"
                                android:visibility="invisible">

                            </Spinner>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginRight="20dp"
                            android:layout_row="1">

                            <View
                                android:id="@+id/okvirLabelaRazinaTri"
                                android:layout_width="90dp"
                                android:layout_height="30dp"
                                android:background="@drawable/okvir"
                                android:tag="okvirLabelaRazinaTri"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/labelaRazinaTri"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CodeIt"
                                android:textColor="#000000"
                                android:textSize="40dp"
                                android:visibility="invisible" />

                        </LinearLayout>
                    </GridLayout>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/gumb_go_razina3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="25dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/sve_skupa"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="13dp"
                    android:src="@drawable/strelica2"
                    android:visibility="invisible" />

            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>

    <ListView
        android:id="@+id/drawerListRazinaTri"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/crvenaPozadina"
        android:divider="@null" />

</android.support.v4.widget.DrawerLayout>

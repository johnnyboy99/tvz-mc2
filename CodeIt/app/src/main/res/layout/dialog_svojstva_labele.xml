<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/bijela"
        android:text="Svojstva labele"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <GridLayout
        android:id="@+id/GridLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:orientation="vertical">

        <TextView
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:text="Tekst labele:"
            android:layout_row="0"
            android:textColor="@color/bijela"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/editTextSvojstvaLabeleR2"
            android:layout_column="1"
            android:layout_width="150dp"
            android:textColor="@color/bijela"
            android:layout_gravity="right"
            android:layout_marginBottom="5dp"
            android:layout_row="0">
        </EditText>

        <TextView
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:text="Velicina labele:"
            android:layout_row="1"
            android:textColor="@color/bijela"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/editTextVelicinaLabeleR2"
            android:layout_column="1"
            android:layout_width="150dp"
            android:textColor="@color/bijela"
            android:layout_gravity="right"
            android:layout_marginBottom="5dp"
            android:layout_row="1"
            android:inputType="number">
        </EditText>

        <TextView
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:text="Boja labele:"
            android:layout_row="2"
            android:textColor="@color/bijela"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <Spinner
            android:id="@+id/spinnerSvojstvaLabeleR2"
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:textColor="@color/bijela"
            android:layout_gravity="right"
            android:layout_row="2"
            android:layout_marginBottom="16dp"/>

    </GridLayout>

</LinearLayout>

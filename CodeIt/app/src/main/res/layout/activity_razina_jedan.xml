<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayoutRazinaJedan"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frameLayoutRazinaJedan"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/menuRazinaJedan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/crvenaPozadina"
                android:orientation="horizontal"
                android:weightSum="10">

                <ImageButton
                    android:id="@+id/drawerGumbRazinaJedan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.5"
                    android:background="@color/crvenaPozadina"
                    android:src="@drawable/menu36" />

                <RelativeLayout
                    android:id="@+id/menuElementiRazinaJedan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8.5"
                    android:background="@color/crvenaPozadina">

                    <View
                        android:id="@+id/krugZaElementeRazinaJedan"
                        android:layout_width="200dp"
                        android:layout_height="90dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/krug"
                        android:tag="krugZaElementeRazinaJedan"
                        android:visibility="gone" />


                    <HorizontalScrollView
                        android:id="@+id/horizontalScrollViewRazinaJedan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fadingEdgeLength="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="20dp">

                            <ImageView
                                android:id="@+id/slikaGumbRazinaJedan"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/gumb1"
                                android:tag="gumb1" />

                        </LinearLayout>
                    </HorizontalScrollView>

                    <ImageView
                        android:id="@+id/arrowLRazinaJedan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrowl" />

                    <ImageView
                        android:id="@+id/arrowRRazinaJedan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrowr" />

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/menuRazinaJedan">

                <LinearLayout
                    android:id="@+id/radnaPlohaRazinaJedan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/sivaPozadina"
                    android:gravity="center">

                    <View
                        android:id="@+id/okvirGumbRazinaJedan"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/okvir"
                        android:tag="okvirGumbRazinaJedan" />

                    <Button
                        android:id="@+id/gumbRazinaJedan"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:text="Gumb"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                </LinearLayout>

                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="40dp"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:id="@+id/opisniTekstUzAnimaciju"
                android:textSize="30sp" />

                <View
                    android:id="@+id/krugZaRadnuPlohuRazinaJedan"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@drawable/okvir"
                    android:tag="krugZaRadnuPlohuRazinaJedan"
                    android:visibility="gone" />

                <View
                    android:id="@+id/okvirPrividniGumbRazinaJedan"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/okvir"
                    android:tag="okvirPrividniGumbRazinaJedan"
                    android:visibility="gone" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gumb_go"
                    android:src="@drawable/strelica2"
                    android:background="@drawable/sve_skupa"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:padding="13dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="25dp"
                    android:visibility="invisible" />

            </RelativeLayout>
        </RelativeLayout>

        <View
            android:id="@+id/prazanKrugZaMenuDrawerPlohuRazinaJedan"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="-52dp"
            android:layout_marginTop="-28dp"
            android:background="@drawable/prazan_krug"
            android:clipChildren="false"
            android:visibility="gone" />

    </FrameLayout>

    <ListView
        android:id="@+id/drawerListRazinaJedan"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/crvenaPozadina"
        android:divider="#FFFFFF"
        android:dividerHeight="3dp" />


</android.support.v4.widget.DrawerLayout>

